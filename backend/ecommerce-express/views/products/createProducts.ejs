<%- include('../layouts/head.ejs')%>

<body>
  <div>
    <%- include('../layouts/sidebar.ejs')%>
    <div class="relative md:ml-64">
      <%- include('../layouts/navTop.ejs')%>
      <div class="relative md:pt-24 pb-24 pt-12">
        <div class="w-full px-4">
          <!-- lg:w-8/12 bg-pink-600 -->
          <div
            class="relative overflow-hidden flex flex-col min-w-0 break-words w-full mb-6 shadow-xl border rounded-lg bg-blueGray-200"
          >
            <div class="rounded-t bg-white mb-0 px-6 py-6 ov">
              <div class="text-center flex justify-between">
                <h6 class="text-blueGray-700 text-xl font-bold">
                  <%= pageTitle %>
                </h6>
                <button
                  class="bg-pink-500 text-white active:bg-pink-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 ease-linear transition-all duration-150"
                  type="button"
                >
                  Settings
                </button>
              </div>
            </div>
            <hr />
            <div class="flex-auto px-4 lg:px-10 py-10 pt-0 bg-white">
              <form
                action="/api/v1/products/create"
                method="post"
                class="mt-3"
                novalidate
                enctype="multipart/form-data"
              >
                <div class="flex flex-wrap">
                  <div class="w-full lg:w-6/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Name
                      </label>
                      <input
                        type="text"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Name..."
                        name="name"
                        value="<%= form[0]?.name %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-6/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Brand
                      </label>
                      <input
                        type="text"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Brand..."
                        name="brand"
                        value="<%= form[0]?.brand %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-6/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Category
                      </label>
                      <input
                        type="text"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Category..."
                        name="category"
                        value="<%= form[0]?.category %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-6/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Image
                      </label>
                      <input
                        type="file"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Image..."
                        name="image"
                        value="<%= form[0]?.image %>"
                      />
                    </div>
                  </div>
                </div>

                <div class="flex flex-wrap">
                  <div class="w-full lg:w-4/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Price
                      </label>
                      <input
                        type="number"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Price ..."
                        name="price"
                        value="<%= form[0]?.price %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-4/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        count In Stock
                      </label>
                      <input
                        type="number"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="CountInStock..."
                        name="countInStock"
                        value="<%= form[0]?.countInStock %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-4/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        rating
                      </label>
                      <input
                        type="number"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Rating..."
                        name="rating"
                        value="<%= form[0]?.rating %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-4/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Num Reviews
                      </label>
                      <input
                        type="number"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="NumReviews..."
                        name="numReviews"
                        value="<%= form[0]?.numReviews %>"
                      />
                    </div>
                  </div>
                  <div class="w-full lg:w-4/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        color
                      </label>
                      <input
                        type="text"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        placeholder="Color..."
                        name="color"
                        value="<%= form[0]?.color %>"
                      />
                    </div>
                  </div>
                </div>

                <div class="flex flex-wrap">
                  <div class="w-full lg:w-12/12 px-4">
                    <div class="relative w-full mb-3">
                      <label
                        class="block uppercase text-blueGray-600 text-xs font-bold mb-2"
                      >
                        Description
                      </label>
                      <textarea
                        type="text"
                        class="border border-slate-400 px-3 py-3 placeholder-blueGray-500 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"
                        rows="4"
                        placeholder="Description ..."
                        name="description"
                      >
<%= form[0]?.description %></textarea
                      >
                    </div>
                  </div>
                </div>
                <div class="text-center mt-6">
                  <button
                    class="bg-blueGray-800 text-white active:bg-blueGray-600 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-32 ease-linear transition-all duration-150"
                    type="submit"
                  >
                    Sign In
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../layouts/end.ejs')%>
</body>
